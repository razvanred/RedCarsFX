<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import org.controlsfx.control.SegmentedButton?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXButton?>
<?import org.controlsfx.control.ToggleSwitch?>
<?import org.controlsfx.control.RangeSlider?>
<BorderPane xmlns:fx="http://javafx.com/fx" fx:controller="carsFX.control.OnSale">

    <top>
        <VBox spacing="25">

            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>

            <BorderPane>
                <padding>
                    <Insets topRightBottomLeft="15"/>
                </padding>

                <left>

                    <HBox spacing="5">
                        <HBox spacing="3">
                            <Label style="-fx-font-weight: bold">Alimentazione</Label>
                            <JFXComboBox fx:id="comboAlimentazione"/>
                        </HBox>
                        <HBox spacing="3">
                            <Label style="-fx-font-weight: bold">Versione</Label>
                            <JFXComboBox fx:id="comboVersione"/>
                        </HBox>
                        <!--<HBox spacing="3">
                            <Label style="-fx-font-weight: bold">A partire da EUR</Label>
                            <JFXTextField fx:id="startingAt" nodeOrientation="RIGHT_TO_LEFT"/>
                        </HBox>-->
                    </HBox>

                </left>
                <right>
                    <ToggleSwitch text="Filtra per neopatentati" selected="false" id="neoToggle"/>
                </right>

            </BorderPane>

            <BorderPane fx:id="addRange">
                <padding><Insets topRightBottomLeft="15"/></padding>
            </BorderPane>

            <BorderPane>
                <padding><Insets topRightBottomLeft="10"/></padding>
                <center>
                    <SegmentedButton fx:id="filterBrand"/>
                </center>
            </BorderPane>

            <BorderPane>
                <padding><Insets topRightBottomLeft="10"/></padding>
                <center>
                    <HBox spacing="10" alignment="CENTER">
                        <JFXRadioButton fx:id="radioNew" text="Nuova"/>
                        <JFXRadioButton fx:id="radioUsed" text="Usata"/>
                    </HBox>
                </center>
            </BorderPane>

        </VBox>

    </top>

    <center>
        <TableView fx:id="table"/>
    </center>

    <bottom>
        <BorderPane>
            <padding><Insets topRightBottomLeft="10"/></padding>
            <right>
                <JFXButton onAction="#addCar" textFill="white" style="-fx-background-color: green" text="NUOVA"/>
            </right>
        </BorderPane>

    </bottom>

</BorderPane>
